<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="aclcbukidnon.com.javafxactivity.controllers.TrafficLightController">

   <!-- Traffic Light Rectangles -->
   <Rectangle fx:id="redLight" width="100" height="100" layoutX="50" layoutY="50" fill="gray" />
   <Rectangle fx:id="yellowLight" width="100" height="100" layoutX="50" layoutY="160" fill="gray" />
   <Rectangle fx:id="greenLight" width="100" height="100" layoutX="50" layoutY="270" fill="gray" />

   <!-- Manual Control Buttons -->
   <Button fx:id="stopButton" text="Stop (Red)" layoutX="200" layoutY="50" onAction="#stopTrafficLight"/>
   <Button fx:id="holdButton" text="Hold (Yellow)" layoutX="200" layoutY="120" onAction="#setManualTrafficLight"/>
   <Button fx:id="goButton" text="Go (Green)" layoutX="200" layoutY="190" onAction="#setManualTrafficLight"/>

   <!-- Reset Button -->
   <Button fx:id="resetButton" text="Reset" layoutX="200" layoutY="260" onAction="#resetTrafficLights"/>

</AnchorPane>
